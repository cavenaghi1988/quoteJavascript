<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Quote Generator
    link( href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet")
    link(rel="stylesheet", href="./fonts/font.scss")
    link(rel="stylesheet", href="./style.scss")
  body
    div(class="quote-container" id="quote-container") 
      div(class="quote-container__quote-text")
        i(class="fas fa-quote-left")
        span(id="quote")
          
      div(class="quote-container__quote-author")
        span(id="author") 
      div(class="quote-container__button-container")
        button(class="quote-container__button-twitter" id="twitter" title="Tweet this!!!")
          i(class="fab fa-twitter")
        button(id="new-quote") New Quote
    div(class="loader" id="loader")
    //- script
    script(src="./script.js")